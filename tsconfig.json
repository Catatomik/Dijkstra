{
  "compilerOptions": {
    "outDir": "./lib",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*",
    "eslint.config.mjs"
  ]
}